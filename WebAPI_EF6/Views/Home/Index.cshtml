@section scripts {
    @Scripts.Render("~/bundles/app")
}
<body style="background-color:powderblue;">
    <div class="page-header">
        <h1>BunnyCoders University</h1>
    </div>

    <div class="row">

        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading" style="background-color:silver;">
                    <h2 class="panel-title">Classes</h2>
                </div>
                <div class="panel-body" style="background-color:palegoldenrod;">
                    <ul class="list-unstyled" data-bind="foreach: courses">
                        <li>
                            <strong><span data-bind="text: InstructorName"></span></strong>: <span data-bind="text: Title"></span>
                            <small><a href="#" data-bind="click: $parent.getCourseDetail">Details</a></small>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
        </div>

        <!-- ko if:detail() -->

        <div class="col-md-3">
            <div class="panel panel-default">
                <div class="panel-heading" style="background-color:silver;">
                    <h2 class="panel-title">Detail</h2>
                </div>
                <table class="table" style="background-color:palegoldenrod;">
                    <tr><td>Instructor</td><td data-bind="text: detail().InstructorName"></td></tr>
                    <tr><td>Title</td><td data-bind="text: detail().Title"></td></tr>
                    <tr><td>Credits</td><td data-bind="text: detail().Credits"></td></tr>
                    <tr><td>Dept</td><td data-bind="text: detail().Dept"></td></tr>
                    <tr><td>Price</td><td data-bind="text: detail().Price"></td></tr>
                    <tr><td>StartDate</td><td data-bind="text: detail().StartDate"></td></tr>
                </table>
            </div>
        </div>

        <!-- /ko -->

        <div class="col-md-5">
            <div class="panel panel-default">
                <div class="panel-heading" style="background-color:silver;">
                    <h2 class="panel-title">Add Class</h2>
                </div>

                <div class="panel-body" style="background-color:palegoldenrod;">
                    <form class="form-horizontal" data-bind="submit: addCourse">
                        <div class="form-group">
                            <label for="inputInstructor" class="col-sm-2 control-label">Instructor</label>
                            <div class="col-sm-10">
                                <select data-bind="options:instructors, optionsText: 'Name', value: newCourse.Instructor"></select>
                            </div>
                        </div>

                        <div class="form-group" data-bind="with: newCourse">
                            <label for="inputTitle" class="col-sm-2 control-label">Title</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="inputTitle" data-bind="value:Title" />
                            </div>

                            <label for="inputCredits" class="col-sm-2 control-label">Credits</label>
                            <div class="col-sm-10">
                                <input type="number" class="form-control" id="inputCredits" data-bind="value:Credits" />
                            </div>

                            <label for="inputDept" class="col-sm-2 control-label">Dept</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="inputDept" data-bind="value:Dept" />
                            </div>
                            <!-- DateTime start -->
                            <label for="inputStartDate" class="col-sm-2 control-label">StartDate</label>
                            <div class="col-sm-10">
                                <input type="datetime" class="form-control" id="inputStartDate" data-bind="value:StartDate" />
                            </div>
                            <!-- DateTime end -->
                            <label for="inputPrice" class="col-sm-2 control-label">Price</label>
                            <div class="col-sm-10">
                                <input type="number" step="any" class="form-control" id="inputPrice" data-bind="value:Price" />
                            </div>
                        </div>
                        <button type="submit" class="btn btn-default">Submit</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
